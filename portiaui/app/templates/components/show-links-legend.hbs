{{#tree-list as |list|}}
    {{#list.item as |followed-item|}}
        {{followed-item.badge value=followedLinks color=colors.green}}
        Followed
    {{/list.item}}
    {{#list.item as |js-item|}}
        {{js-item.badge value=jsLinks color=colors.blue}}
        Followed when Javascript is enabled
    {{/list.item}}
    {{#list.item as |ignored-item|}}
        {{ignored-item.badge value=ignoredLinks color=colors.red}}
        Not Followed
    {{/list.item}}
{{/tree-list}}
