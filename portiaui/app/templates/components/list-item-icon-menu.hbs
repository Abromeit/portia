{{#dropdown-widget class="list-item-icon" menuContainer="body" menuAlign="right" as |options|}}
    {{#if (eq options.section 'widget')}}
        {{list-item-icon model=model icon=icon action=options.toggleMenu tabindex=-1}}
    {{else if (eq options.section 'menu')}}
        {{yield options}}
    {{/if}}
{{/dropdown-widget}}
